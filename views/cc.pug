extends layout

block content
    h1= title

    form(action="/cc", method="POST") 
        label(for="ciphertext") Ciphertext: 
        textarea(name="ciphertext", id="ciphertext", cols="30", rows="10")
        br
        label(for="key") Schlüssel: 
        input(type="text", name="key", id="key") 
        br
        button(type="submit") Text entschlüsseln 

    p(name="result") Entschlüsselter Text: #{result}